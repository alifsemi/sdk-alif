/* setting i2c0 as master and lpi2c instance as slave.
 *
 */

/ {
	aliases {
		master-i2c = &i2c0;
		slave-i2c = &lpi2c;
	};
};

&i2c0 {
	status = "okay";
};

&lpi2c {
	status = "okay";
};
